{
  "manifest_version": 2,
  "name": "Notist",
  "description": "Annotate websites and online articles",
  "version": "1.0.9",
  "icons": {
    "16": "favicon-16.png",
    "48": "favicon-48.png",
    "128": "favicon-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "activeTab", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": [
        "http://notist.io/*",
        "http://facebook.com/*",
        "https://facebook.com/*",
        "http://google.com/*",
        "https://google.com/*",
        "http://*/*.pdf",
        "https://*/*.pdf"
      ],
      "css": [
        "lib/css/annotator.min.css"
      ],
      "js": [
        "lib/scripts/jquery-1.6.min.js",
        "lib/scripts/annotator.min.js",
        "content.js",
        "lib/scripts/explore.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "favicon-16.png"
    },
    "default_title": "Notist"
  }
}
