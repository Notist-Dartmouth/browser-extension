{
  "manifest_version": 2,
  "name": "Notist",
  "description": "Web Annotation",
  "version": "1.0",
  "browser_action": {
    "default_icon": "favicon.ico"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "activeTab", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": [
        "lib/css/annotator.min.css"
      ],
      "js": [
        "lib/scripts/jquery-1.6.min.js",
        "lib/scripts/annotator.min.js",
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Annotate"
  }
}
