{
  "manifest_version": 2,
  "name": "Notist",
  "description": "Web Annotation",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "storage", "activeTab", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Annotate"
  },
  "web_accessible_resources": [
    "config.json"
  ]
}
